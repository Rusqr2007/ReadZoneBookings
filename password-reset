<body>
    <div class="container">
        <h2>Новый пароль</h2>
        <div id="statusMessage"></div>
        <div id="passwordForm">
            <div class="form-group">
                <label for="newPassword">Новый пароль</label>
                <input type="password" id="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Повторите пароль</label>
                <input type="password" id="confirmPassword" required>
            </div>
            <button class="btn" onclick="updatePassword()">Обновить пароль</button>
        </div>
    </div>

    <script>
        const SUPABASE_URL = 'https://ufdpcktbgazzrqzqxxhf.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InVmZHBja3RiZ2F6enJxenF4eGhmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTg1Mjc4MzIsImV4cCI6MjA3NDEwMzgzMn0.GT3YDB3pKZyDqTX-I3dkZQb4xpWP8xK9bhMgFnaZhsM';
        
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        async function updatePassword() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const statusMessage = document.getElementById('statusMessage');

            if (newPassword.length < 6) {
                statusMessage.innerHTML = '<div class="error">Пароль должен быть не менее 6 символов.</div>';
                return;
            }

            if (newPassword !== confirmPassword) {
                statusMessage.innerHTML = '<div class="error">Пароли не совпадают.</div>';
                return;
            }

            const { data, error } = await supabase.auth.updateUser({ password: newPassword });
            
            if (error) {
                statusMessage.innerHTML = `<div class="error">Ошибка: ${error.message}</div>`;
            } else {
                statusMessage.innerHTML = '<div class="success">Пароль успешно обновлен!</div>';
                setTimeout(() => {
                    window.location.href = '/'; // Перенаправляем на главную
                }, 2000);
            }
        }
    </script>
